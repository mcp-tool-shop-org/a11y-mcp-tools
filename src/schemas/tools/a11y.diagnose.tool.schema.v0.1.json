{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcp-tool-shop.github.io/schemas/tools/a11y.diagnose.tool.schema.v0.1.json",
  "title": "Tool Schema: a11y.diagnose v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["mcp", "input"],
  "properties": {
    "mcp": {
      "type": "object",
      "additionalProperties": false,
      "required": ["envelope", "request_id", "tool"],
      "properties": {
        "envelope": { "const": "mcp.envelope_v0_1" },
        "request_id": { "type": "string", "minLength": 1 },
        "tool": { "const": "a11y.diagnose" },
        "client": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "version"],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "version": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "bundle_id": { "type": "string", "minLength": 1 },
        "bundle": { "type": "object" },
        "artifacts": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "profile": {
          "type": "string",
          "enum": ["wcag-2.0-a", "wcag-2.0-aa", "wcag-2.1-a", "wcag-2.1-aa", "wcag-2.2-a", "wcag-2.2-aa"],
          "default": "wcag-2.2-aa"
        },
        "rules": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "include": { "type": "array", "items": { "type": "string" }, "default": [] },
            "exclude": { "type": "array", "items": { "type": "string" }, "default": [] }
          }
        },
        "output": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "include_fix_guidance": { "type": "boolean", "default": true },
            "include_evidence": { "type": "boolean", "default": true }
          }
        },
        "integrity": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "verify_provenance": { "type": "boolean", "default": true }
          }
        }
      },
      "oneOf": [
        { "required": ["bundle_id"] },
        { "required": ["bundle"] }
      ]
    }
  }
}
