{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcp-tool-shop.github.io/schemas/tools/a11y.evidence.response.schema.v0.1.json",
  "title": "Response Schema: a11y.evidence v0.1",
  "oneOf": [
    { "$ref": "#/$defs/SuccessResponse" },
    { "$ref": "#/$defs/ErrorResponse" }
  ],
  "$defs": {
    "SuccessResponse": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mcp", "result"],
      "properties": {
        "mcp": {
          "type": "object",
          "additionalProperties": false,
          "required": ["envelope", "request_id", "tool", "ok"],
          "properties": {
            "envelope": { "const": "mcp.envelope_v0_1" },
            "request_id": { "type": "string", "minLength": 1 },
            "tool": { "const": "a11y.evidence" },
            "ok": { "const": true }
          }
        },
        "result": {
          "type": "object",
          "additionalProperties": false,
          "required": ["bundle"],
          "properties": {
            "bundle": { "$ref": "https://mcp-tool-shop.github.io/schemas/evidence.bundle.v0.1.json" }
          }
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mcp", "error"],
      "properties": {
        "mcp": {
          "type": "object",
          "additionalProperties": false,
          "required": ["envelope", "request_id", "tool", "ok"],
          "properties": {
            "envelope": { "const": "mcp.envelope_v0_1" },
            "request_id": { "type": "string", "minLength": 1 },
            "tool": { "const": "a11y.evidence" },
            "ok": { "const": false }
          }
        },
        "error": {
          "type": "object",
          "additionalProperties": false,
          "required": ["code", "message"],
          "properties": {
            "code": {
              "type": "string",
              "enum": [
                "INVALID_INPUT",
                "FILE_NOT_FOUND",
                "CAPTURE_FAILED",
                "INTERNAL_ERROR"
              ]
            },
            "message": { "type": "string", "minLength": 1 },
            "fix": { "type": "string" }
          }
        }
      }
    }
  }
}
